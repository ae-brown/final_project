<!DOCTYPE html>
<html>
<head>
  <title>Med reminder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<%if current_user %>
			<button><%= link_to 'new reminder', new_remind_path %> </button>
			<button><%= link_to 'view and edit reminders', reminds_path %></button>
			<button><%= link_to 'Logout', destroy_user_session_path, method: :delete %></button>
		<%else%>
			<button><%= link_to 'login', new_user_session_path %> </button>
			<button><%= link_to 'Signup', new_user_registration_path %></button>
		<%end%>


<%= yield %>

</body>
</html>
